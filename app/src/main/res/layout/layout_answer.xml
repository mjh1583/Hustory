<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logo_main"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="30dp"

        android:contentDescription="@string/todo"
        android:scaleType="fitCenter"
        android:src="@drawable/logo_main" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_sub1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fab_sub2"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#ffffff"
        android:src="@drawable/ic_menu_search"
        android:visibility="invisible"
        android:elevation="7dp"
        app:borderWidth="0dp"
        app:fabSize="normal" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_sub2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fab_main"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#ffffff"
        android:src="@drawable/ic_menu_my_calendar"
        android:visibility="invisible"
        android:elevation="7dp"
        app:borderWidth="0dp"
        app:fabSize="normal" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/main_color"
        android:elevation="7dp"
        app:borderWidth="0dp"
        app:fabSize="normal"
        app:srcCompat="@drawable/booking" />

    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo_main"
        android:fontFamily="@font/jalnan"
        android:gravity="center_horizontal"
        android:text="@string/question"
        android:textSize="16dp"
        android:padding="15dp"
        android:background="@color/main_color"
        android:textColor="@color/white"/>


    <LinearLayout
        android:id="@+id/question_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/question"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/new_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/new_question"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/jalnan" />

        <TextView
            android:id="@+id/question_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"

            android:text="@string/test_scroll"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/jalnan" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="7dp"

                android:text="@string/test_name"
                android:textSize="10sp"
                android:fontFamily="@font/jalnan"/>

            <TextView
                android:id="@+id/question_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:gravity="center_horizontal|center_vertical"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"

                android:text="@string/answer_time"
                android:textSize="10dp"
                android:textColor="@color/white"
                android:fontFamily="@font/jalnan"

                android:background="@drawable/round4_background"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>


    <ListView
        android:id="@+id/list_answer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/question_scroll"
        android:dividerHeight="0px"
        android:divider="#FFFFFF">

    </ListView>

    <Button
        android:id="@+id/button_answer"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_alignParentBottom="true"
        android:text="@string/go_answer"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:fontFamily="@font/jalnan"
        android:elevation="2dp"
        android:background="@drawable/round2_background"/>

</RelativeLayout>