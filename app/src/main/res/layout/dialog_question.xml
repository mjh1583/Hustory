<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/round_dialog"
    android:layout_margin="20dp"
    android:padding="15dp"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/jalnan"
            android:gravity="center_horizontal"
            android:text="@string/go_answer"
            android:textColor="@color/main_color" />

        <ImageView
            android:id="@+id/button_back"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/cancel"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="2dp"
        android:padding="10dp"
        android:background="@drawable/stroke_dialog">

        <EditText
            android:id="@+id/answerETXT"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:fontFamily="@font/jalnan"
            android:hint="@string/answer_content"
            android:textSize="12dp" />

    </ScrollView>

    <Button
        android:id="@+id/answer_AddBTN"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:text="@string/enter"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:fontFamily="@font/jalnan"
        android:elevation="2dp"
        android:background="@drawable/round2_background"/>

</LinearLayout>