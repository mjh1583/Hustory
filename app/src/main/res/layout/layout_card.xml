<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logo_main"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="30dp"

        android:contentDescription="@string/todo"
        android:scaleType="fitCenter"
        android:src="@drawable/logo_main" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jalnan"
        android:gravity="center_horizontal"
        android:text="@string/card"
        android:textSize="16dp"
        android:padding="15dp"
        android:background="@color/main_color"
        android:textColor="@color/white" />

    <ScrollView
        android:id="@+id/ScrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="25dp"
            android:layout_weight="1"
            android:background="@drawable/round3_background"
            android:elevation="5dp"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon_profile"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="15dp"
                    android:contentDescription="@string/todo"
                    app:srcCompat="@drawable/student"
                    tools:srcCompat="@drawable/student" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/jalnan"
                        android:text="@string/test_name"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:background="@null" />

                    <EditText
                        android:id="@+id/birth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/jalnan"
                        android:text="@string/test_birth"
                        android:textSize="12sp"
                        android:background="@null" />

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/jalnan"
                        android:text="@string/test_email"
                        android:textSize="12sp"
                        android:background="@null" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="@string/education"
                    android:textSize="10sp"
                    android:textColor="@color/grey"
                    android:fontFamily="@font/jalnan" />

                <EditText
                    android:id="@+id/education"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/jalnan"
                    android:text="@string/education"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:background="@null" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:background="@color/view_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="@string/certificate"
                    android:textSize="10sp"
                    android:textColor="@color/grey"
                    android:fontFamily="@font/jalnan" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <EditText
                        android:id="@+id/certificate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/jalnan"
                        android:text="@string/test_scroll"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                </ScrollView>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:background="@color/view_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="@string/experience"
                    android:textSize="10sp"
                    android:textColor="@color/grey"
                    android:fontFamily="@font/jalnan" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <EditText
                        android:id="@+id/experience"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/jalnan"
                        android:text="@string/test_scroll"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                </ScrollView>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:background="@color/view_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="@string/career"
                    android:textSize="10sp"
                    android:textColor="@color/grey"
                    android:fontFamily="@font/jalnan" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <EditText
                        android:id="@+id/career"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/jalnan"
                        android:text="@string/test_scroll"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                </ScrollView>

            </LinearLayout>

            <Button
                android:id="@+id/button_modify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"

                android:text="@string/save"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:fontFamily="@font/jalnan"
                android:padding="5dp"

                android:elevation="5dp"
                android:background="@drawable/round2_background" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>