<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo_login"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/logo_login2"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.3"
        android:orientation="vertical">

        <EditText
            android:id="@+id/login_emailETXT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="52dp"
            android:layout_marginRight="52dp"
            android:hint="@string/id"
            android:textColor="@color/main_color"
            android:fontFamily="@font/jalnan"
            android:textSize="14sp"
            android:padding="15dp"
            android:singleLine="true"
            android:inputType="textVisiblePassword"
            android:background="@drawable/round8_background"/>

        <EditText
            android:id="@+id/login_passwordETXT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="52dp"
            android:layout_marginRight="52dp"
            android:hint="@string/pw"
            android:textColor="@color/main_color"
            android:fontFamily="@font/jalnan"
            android:textSize="14sp"
            android:padding="15dp"
            android:singleLine="true"
            android:inputType="textPassword"
            android:background="@drawable/round8_background"/>

        <Button
            android:id="@+id/login_loginBTN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:padding="17dp"
            android:background="@drawable/round9_background"
            android:textColor="@color/white"
            android:fontFamily="@font/jalnan"
            android:elevation="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/auto_loginBTN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Auto"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:buttonTint="@color/white"
                android:fontFamily="@font/jalnan"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/login_signUpBTN"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/signup"
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:textColor="@color/summary_color"
                android:fontFamily="@font/jalnan"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_find"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:paddingTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/find_Id_TXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/find_id"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:fontFamily="@font/jalnan"/>

        <View
            android:layout_width="1dp"
            android:layout_height="14dp"
            android:background="@color/white"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/find_Pw_TXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/find_pw"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:fontFamily="@font/jalnan"/>

    </LinearLayout>

</LinearLayout>