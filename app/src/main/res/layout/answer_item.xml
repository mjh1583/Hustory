<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FAFAFA"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/round7_background"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:padding="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/question"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/new_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/new_answer"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/jalnan" />

                <TextView
                    android:id="@+id/answer_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"

                    android:text="@string/test_scroll"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/jalnan" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/answer_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingRight="7dp"

                        android:text="@string/test_name"
                        android:textSize="10sp"
                        android:fontFamily="@font/jalnan"/>

                    <TextView
                        android:id="@+id/answer_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:paddingLeft="7dp"
                        android:paddingRight="7dp"

                        android:text="@string/answer_time"
                        android:textSize="10dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/jalnan"

                        android:background="@drawable/round4_background"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>